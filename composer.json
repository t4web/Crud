{
    "name": "t4web/crud",
    "description": "ZF2 Module. Abstract layer for manage domain entity",
    "type": "library",
    "license": "BSD-3-Clause",
    "keywords": [
        "zf2",
        "module",
        "zf2 module",
        "domain",
        "crud"
    ],
    "homepage": "https://github.com/t4web/Crud",
    "authors": [
        {
            "name": "sebaks",
            "email": "d.kirillof@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.5",
        "zendframework/zend-eventmanager": ">=2.6",
        "zendframework/zend-http": ">=2.6",
        "zendframework/zend-modulemanager": ">=2.6",
        "zendframework/zend-mvc": ">=2.6",
        "zendframework/zend-view": ">=2.6",

        "sebaks/controller": "~0.1.0",
        "t4web/domain": "~1.1.2"
    },
    "require-dev" : {
        "phpunit/phpunit": "~4.5",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "T4web\\Crud\\": "src/"
        }
    },
    "scripts": {
        "check": [
            "@cs",
            "@test"
        ],
        "cs": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always"
    }
}
